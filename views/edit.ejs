<%- include('./template/header') %>
<%- include('./template/navbar') %>
<section id='add' class='container'>
    <div class='form-box'>
        <h4>Update the Crochet Pattern</h4>
        <p></p>
        <form action="/pattern/<%= pattern.patternType %>/<%= pattern.id %>?_method='PUT'" method="POST">
            <div class='patternBox'>
                <label for="title">Title:</label>
                <input type="text" name="title" value="<%= pattern.title %>"><br>
            </div>
            <div class='patternBox'>
                <label for="introImg">Title Image:</label>
                <input type="text" name="introImg" value="<%= pattern.title %>"><br>
            </div>
            <div class='patternBox'>
                <label for="introContent">Introduction:</label>
                <input type="text" name="introContent" value="<%= pattern.introContent %>"><br>
            </div>
            <div class='patternBox'>
                <label for="itemsNeeded">Items/Tools Needed:</label>
                <input type="itemsNeeded" name="itemsNeeded" value="<%= pattern.itemsNeeded %>"><br>
            </div>
            <div class='patternBox'>
                <label for="contentHowTo">Title Image:</label>
                <input type="text" name="contentHowTo" value="<%= pattern.contentHowTo %>"><br>
            </div>
            <div class='patternBox'>
                <label for="finalImg">Pattern Image:</label>
                <input type="text" name="introImg" value="<%= pattern.title %>"><br>
            </div>
                <input type="submit" name="" value="Sign Up!">
        </form>
    </div>
</section>
<%- include('./template/footer') %>