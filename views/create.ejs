<%- include('./template/header') %>
<section id='add' class='container'>
    <div class='form-box'>
        <h4>Add a Crochet Pattern</h4>
        <p></p>
        <form action="/pattern/create" method="POST" enctype="multipart/form-data">
            <div class='input-project'>
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" class='input-box' maxlength="100" placeholder="eg. title of project"><br>
            </div>
            <div class='input-project'>
                <label for="patternType">Pattern Type:</label>
                <select type="text" name="patternType" id="patternType" class='input-box'>
                    <option value="Crochet">Crochet</option>
                    <option value="Crochet">Knitting</option>
                    <option value="Crochet">Sewing</option>
                </select><br>
            </div>
            <div class='input-project'>
            <div class='input-project'>
                <label for="introImg">Title Image:</label>
                <input type="text" name="introImg" id="introImg" class='input-box' maxlength="100" placeholder="eg. image url"><br>
            </div>
            <div class='input-project'>
                <label for="introContent">About the Pattern:</label>
                <input type="text" name="introContent" id="introContent" class='input-box' rows='2' maxlength="100"placeholder="eg. description of project, why you created the pattern, etc..."><br>
            </div>
            <div class='input-project'>
                <label for="itemsNeeded">Items/Tools Needed:</label>
                <textarea type="text" name="itemsNeeded" id="itemsNeeded" class='input-box' rows='3' placeholder="eg. hook: size G / size 3mm, yarn: cotton, nylon"></textarea><br>
            </div>
            <div class='input-project'>
                <label for="contentHowTo">Pattern Instructions:</label>
                <textarea name="contentHowTo" id="contentHowTo" class='input-box' rows='15' placeholder="eg. steps to begin and complete project"></textarea><br>
            </div>
            <div class='input-project'>
                <label for="finalImg">Product Image:</label>
                <input type="text" name="finalImg" id="finalImg" class='input-box' maxlength="100" placeholder="eg. image of completed project"><br>
            </div>
            <div class='input-project'>
                <label for="endingContent">Closing Comment(s):</label>
                <textarea name="endingContent" id="endingContent" class='input-box' rows='3' placeholder="eg. closing comments"></textarea><br>
            </div>
                <input type="submit" name="" class='btn btn-reverse' value="Create Pattern!">
        </form>
    </div>
</section>
</body>
</html>