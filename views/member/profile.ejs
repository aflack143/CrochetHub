<%- include('../template/header') %>
    <section>
        <% if (member) { %>
            <% if (member.profileImg !== 'default') { %>
                <img src="<%=member.profileImg%>">
            <% } else { %>
                <img src="/images/default-tinkerbell.png">
            <% }  %>
        <h3><%=member.first_name%></h3>

        <% } %>
        <h4>About Me:</h4>
        <p><%=member.aboutMe%></p>
    </section>
    <div>
        <a href="/profile/<%=member.id%>/edit">Edit profile</a>
        <form action="/member/profile/<%= member.id %>?_method=DELETE" method=POST>
            <input type="submit" value="Delete Profile"/>
        </form>
    </div>
    <article>
        <h4>Projects</h4>
    </article>
</body>
</html>