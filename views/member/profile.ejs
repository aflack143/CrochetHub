<%- include('../template/header') %>
<nav>
    <div class="navitem">
        <input type="search" name="search" placeholder="search"/>
        <input type="submit" name="search"/>
    </div>
    <a class="navitem" href="/">Home</a>
    <div class="dropdown navitem">
        <button class="dropbtn">MENU</button>
        <div class="dropdown-content">
            <a href="/pattern/create">Create Pattern</a>
            <a href="/member/profile/<%=member.id%>/edit">Edit Profile</a>
</nav>
</header>
<main>
    <section>
        <% if (member) { %>
            <% if (member.profileImg) { %>
                <img src="<%=member.Avatar.imgUrl%>">
            <% } else { %>
                <img src="/images/avatars/default-tinkerbell.png">
            <% }  %>
        <h3><%=member.first_name%></h3>

        <% } %>
        <h4>About Me:</h4>
        <p><%=member.aboutMe%></p>
    </section>
    <article>
        <h4>Projects</h4>
        <% for (let i=0; i < member.Patterns.length; i++) { %>
            <p><a href='/pattern/<%=member.Patterns[i].patternType%>/<%=member.Patterns[i].id%>'><%= member.Patterns[i].title %></a></p>
            <p><%= member.Patterns[i].introContent %></p>
        <% } %>
    </article>
<%- include('../template/footer') %>